<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.pimod.santanderapp" 
        versionCode = "16" 
        version   = "3.0">

    <preference name="phonegap-version" value="3.5.0" />
    <preference name="fullscreen" value="true" />
    <preference name="orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="SplashScreen" value="splash" />
    <preference name="splash-screen-duration" value="10000"/>
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="auto-hide-splash-screen"    value="false" />
    <preference name="StatusBarOverlaysWebView" value="true" />

    <preference name="android-minSdkVersion" value="11" />
    <preference name="android-targetSdkVersion" value="14" />

    <access origin="*" />
    
    <name>Ideas para hoy</name>
    
    <description>
      Santander Uruguay Ideas para Hoy permite a los usuarios acceder a informaci√≥n sobre eventos de verano y descuentos para usuarios de tarjetas Santander en Punta del Este, Uruguay.
    </description>

    <gap:config-file platform="ios" parent="UIStatusBarHidden">
        <true/>
    </gap:config-file>

    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
        <false/>
    </gap:config-file>

    <icon src="icon.png" />
    <gap:splash src="splash.png" />

    <icon src="img/icons/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="img/icons/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="img/icons/icon_at_2x.png" gap:platform="ios" width="114" height="114" />
    <icon src="img/icons/icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="img/icons/icon-120.png" gap:platform="ios" width="120" height="120" />
    <icon src="img/icons/icon-152.png" gap:platform="ios" width="152" height="152" />


    <gap:splash src="img/splash/ios/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="img/splash/ios/Default_at_2x.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="img/splash/ios/Default_iphone5.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="img/splash/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1004" />
    <gap:splash src="img/splash/ios/Default-Portrait_at_2x.png" gap:platform="ios" width="1536" height="2008" />


    <gap:splash src="img/splash/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="img/splash/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="img/splash/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="img/splash/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />

    <author href="https://build.phonegap.com" email="support@phonegap.com">
        Hardeep Shoker 
    </author>
    
    <gap:platform name="ios" /> 
    <gap:platform name="android" />
     
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="com.phonegap.plugins.pushplugin" />
    <gap:plugin name="org.apache.cordova.splashscreen" />

    <gap:plugin name="com.phonegap.plugins.facebookconnect" version="0.4.0">
        <param name="APP_ID" value="381248932009498" />
        <param name="APP_NAME" value="Santanders App" />
    </gap:plugin>

    <gap:plugin name="com.phonegap.plugin.statusbar" /> 
    <gap:plugin name="com.dileep.plugins.datepicker" />
    <gap:plugin name="de.websector.datepicker" />

    <gap:plugin name="com.adobe.plugins.gaplugin" version="2.3.1" />
    <gap:plugin name="nl.x-services.plugins.toast" version="1.0" />
</widget>